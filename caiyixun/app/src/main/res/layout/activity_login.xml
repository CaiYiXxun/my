<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#339966"
    android:orientation="vertical">

    <TextView
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="欢迎使用，请登录"
        android:textColor="#FFffffff"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/edit_account"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_style2"
        android:hint="请输入账号"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="#FF515151"
        android:textColorHint="#FFA3A3A3" />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/edit_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_style2"

        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#FF515151"
        android:textColorHint="#FFA3A3A3" />

    <CheckBox
        android:layout_marginRight="100dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/ch_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edit_password"

        android:text="记住密码"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progressbar_login"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"></ProgressBar>

        <Button
            android:gravity="center"
            android:id="@+id/bt_login"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/botton"
            android:onClick="onClickLogin"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </RelativeLayout>

</LinearLayout>