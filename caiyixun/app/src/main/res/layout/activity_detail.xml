<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bill_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5EA7E7"
        app:navigationIcon="@drawable/back"
        app:title="订单详情"
        app:titleTextColor="#000000"></androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >

           <LinearLayout
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:background="@drawable/detail_linear_style">

               <LinearLayout
                   android:layout_width="100dp"
                   android:layout_height="100dp">

                   <TextView
                       android:layout_width="38dp"
                       android:layout_height="38dp"
                       android:layout_gravity="center"
                       android:layout_marginLeft="31dp"
                       android:background="@drawable/senttext_style"
                       android:gravity="center"
                       android:text="寄"
                       android:textColor="#000000"
                       android:textSize="28dp"
                       android:textStyle="bold"></TextView>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:orientation="horizontal">

                       <TextView
                               android:id="@+id/rec_name_tv"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="bottom"
                           android:text="张三"
                           android:textColor="#000000"
                           android:textSize="20dp"></TextView>

                       <TextView
                               android:id="@+id/rec_phone_tv"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="bottom"
                           android:text="14785236998"
                           android:textColor="#5F5F5F"
                           android:textSize="15dp"></TextView>

                   </LinearLayout>

                   <TextView
                           android:id="@+id/rec_city_tv"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="bottom"
                       android:text="广东省-广州市"
                       android:textColor="#5F5F5F"
                       android:textSize="15dp"></TextView>

                   <TextView
                           android:id="@+id/rec_address_tv"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="top"
                       android:text="天河区凄凄切切群群群1 111"
                       android:textColor="#5F5F5F"
                       android:textSize="15dp"></TextView>
               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:background="@drawable/detail_linear_style">

               <LinearLayout
                   android:layout_width="100dp"
                   android:layout_height="100dp">

                   <TextView
                       android:layout_width="38dp"
                       android:layout_height="38dp"
                       android:layout_gravity="center"
                       android:layout_marginLeft="31dp"
                       android:background="@drawable/senttext_style2"
                       android:gravity="center"
                       android:text="收"
                       android:textColor="#ffffff"
                       android:textSize="28dp"
                       android:textStyle="bold"></TextView>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:orientation="horizontal">

                       <TextView
                               android:id="@+id/sent_name_tv"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="bottom"
                           android:text="张三"
                           android:textColor="#000000"
                           android:textSize="20dp"></TextView>

                       <TextView
                               android:id="@+id/sent_phone_tv"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:gravity="bottom"
                           android:text="14785236998"
                           android:textColor="#5F5F5F"
                           android:textSize="15dp"></TextView>

                   </LinearLayout>

                   <TextView
                           android:id="@+id/sent_city_tv"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="bottom"
                       android:text="广东省-广州市"
                       android:textColor="#5F5F5F"
                       android:textSize="15dp"></TextView>

                   <TextView
                           android:id="@+id/sent_address_tv"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="top"
                       android:text="天河区凄凄切切群群群1 111"
                       android:textColor="#5F5F5F"
                       android:textSize="15dp"></TextView>
               </LinearLayout>

           </LinearLayout>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="28dp"
               android:background="#A9A9A9"
               android:gravity="center_vertical"
               android:paddingLeft="15dp"
               android:text="订单信息"
               android:textColor="#000000"
               android:textSize="20dp"
               android:textStyle="bold"></TextView>

           <TextView
                   android:id="@+id/order_number_tv"
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:gravity="bottom"
               android:paddingLeft="15dp"
               android:text="订单号："
               android:textColor="#5F5F5F"
               android:textSize="15dp"></TextView>


           <TextView
                   android:id="@+id/courier_number_tv"
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:paddingLeft="15dp"
               android:text="快递单号："
               android:textColor="#5F5F5F"
               android:textSize="15dp"></TextView>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="28dp"
               android:background="#A9A9A9"
               android:gravity="center_vertical"
               android:paddingLeft="15dp"
               android:text="物流信息"
               android:textColor="#000000"
               android:textSize="20dp"
               android:textStyle="bold"></TextView>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/detail_recyclerView"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

           </androidx.recyclerview.widget.RecyclerView>

       </LinearLayout>




    </androidx.core.widget.NestedScrollView>




</LinearLayout>