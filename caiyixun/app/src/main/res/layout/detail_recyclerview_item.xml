<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_recyclerview_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#FFFFFF"
    android:divider="#000000"
    android:dividerPadding="30dp"
    android:orientation="vertical"
    android:showDividers="end">


    <TextView
        android:id="@+id/detail_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_message1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:text="从 "
            android:textColor="#707070"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/detail_message2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textColor="#2141F1"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/detail_message3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=" 运送到 "
            android:textColor="#707070"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/detail_message4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textColor="#2141F1"
            android:textSize="20dp"></TextView>
    </LinearLayout>


</LinearLayout>